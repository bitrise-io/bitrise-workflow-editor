@import "default";
@import "constants";

.tab-code-signing {
	$section-horizontalspacing: 40px;
	$expose_header-text_change_screenwidth: 1200px;
	$layout-style_change_screenwidth: 1000px;
	$column_left-width: 40%;
	$details_icon-width: 30px;
	$details_icon_and_column-spacing: 15px;
	$expose-width: 220px;
	$expose-width-below-inclusive: 140px;
	$action_dropdown_icon-spacing: 15px;
	$action_dropdown_icon-width: 26px;

	section.certificate-help {
		position: relative;
		@include margin-y(30px);
		padding: 25px $section-horizontalspacing;
		background-color: $def-green-ultralight;

		ul {
			@include margin-y(0);
			padding-left: 0;
			list-style: none;

			li {
				@include display-flex;

				&:before {
					content: "";
					@include flex-shrink(0);
					width: 50px;
					margin-right: 20px;
					background-position: center top 5px;
					background-repeat: no-repeat;
				}

				h2 {
					margin-top: 0;
					margin-bottom: 4px;
					font-size: 18px;
					font-weight: 500;
					color: $def-green;
				}

				p {
					margin-top: 0;
					margin-bottom: 10px;
					font-size: 14px;
					font-weight: 200;
					color: $def-darkgrey;
				}

				code {
					display: block;
					@include border-radius($def-radius);
					padding: 8px 18px;
					word-break: break-all;
					background-color: $def-green-verylight;
				}
			}

			li:not(:last-child) {
				margin-bottom: 25px;
			}

			li.codesigndoc {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-codesigndoc") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 30px auto;
				}
			}

			li.upload {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-upload") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 36px auto;
				}
			}

			li.add-step {

				&:before {
					$svg_content_with_attributes: svg_content_with_attributes('<%= svg("code_signing/icon-add_step") %>', (
						fill: rgba($def-green, 0.99)
					));

					background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
					background-size: 37px auto;
				}
			}
		}

		button.hide {
			@include position(absolute, 20px, 20px);
			opacity: 0.5;
			@include transition(opacity, $def-transition_duration);

			svg {
				@include size(15px);
				fill: black;
			}
		}

		button.hide:focus, button.hide:hover {
			opacity: 1.0;
		}
	}

	section.cardo, section.progress-indicator {
		margin: 20px $section-horizontalspacing;
	}

	.files {

		header {
			@include display-flex;
			@include justify-content(space-between);

			.label {
				font-size: 12px;
				font-weight: 400;
			}

			h2.label {
				margin-bottom: 0;
			}

			.expose {
				@include flex-shrink(0);
				width: $expose-width;
				margin-left: auto;
				text-transform: uppercase;

				&:last-child {
					width: $expose-width + $action_dropdown_icon-spacing + $action_dropdown_icon-width;
				}
			}

			.actions {
				position: relative;
				margin-left: $action_dropdown_icon-spacing;

				.dropdown-toggle {
					cursor: pointer;
					height: 100%;

					svg {
						@include size($action_dropdown_icon-width, 12px);
						fill: #999999;
					}

					&:focus svg, &:hover svg {
						fill: $def-darkgrey;
					}
				}

				.dropdown {
					@include position(absolute, 100%, 0);
					z-index: $zindex-popover;
					width: 180px;
					margin-top: 10px;
					border: 1px solid $def-lightgrey;
					@include border-radius(5px);
					@include box-shadow(0px 0px 10px 0px rgba(0, 0, 0, 0.2));
					overflow: hidden;

					.dropdown-option {
						display: block;
						padding: 15px 12px;
						font-size: 12px;
						font-weight: 500;
						color: #767676;
						background-color: white;

						&:hover {
							background-color: $def-ultralightgrey;
						}

						&:not(:last-child) {
							border-bottom: 1px solid $def-lightgrey;
						}

						&.delete-all {
							color: #f17420;
						}
					}

					a.dropdown-option {
						text-decoration: none;
					}

					button.dropdown-option {
						width: 100%;
						text-align: left;
					}
				}
			}
		}

		article {
			padding: 0;

			p.progress-indicator, p.notification {
				@include margin-x($cardo-horizontalpadding);
			}

			.uploaded-files {
				@include margin-y(0);
				padding-left: 0;
				list-style: none;

				.uploaded-file {
					padding: 12px $cardo-horizontalpadding;
					border-bottom: 1px solid $def-mediumlightgrey;

					.details {
						@include display-flex;
						@include align-items(flex-start);

						.icon {
							@include flex-shrink(0);
							margin-right: $details_icon_and_column-spacing;

							svg {
								@include size($details_icon-width, 40px);
							}
						}

						.column {
							margin-right: $details_icon_and_column-spacing;

							&.left {
								@include flex-shrink(0);
								width: $column_left-width;
							}

							&.right {
								@include flex-grow(1);
							}

							.detail {
								margin-bottom: 10px;
								font-size: 14px;
								font-weight: 200;

								&.protected-badge-and-name {
									@include display-flex;
									@include align-items(center);

									.protected-badge {
										@include flex-shrink(0);
										@include display-flex;
										@include align-items(center);
										margin-right: 6px;
										@include border-radius($def-radius);
										padding: 6px;
										font-size: 11px;
										font-weight: 500;
										text-transform: uppercase;
										background-color: $def-verylightgrey;

										.icon-wrapper {
											@include flex-shrink(0);
											margin-right: 6px;

											svg {
												display: block;
												@include size(11px, 16px);
											}
										}
									}

									.name {
										@include flex-grow(1);
										font-weight: 500;
										word-wrap: break-word;
									}
								}

								.label:not(.warning) {
									font-weight: 500;
								}

								.label.warning {
									display: inline-block;
									@include border-radius($def-radius);
									padding: 7px 12px;
									text-transform: uppercase;
									color: $def-danger;
									background-color: $def-danger-light;
								}

								&.code {
									display: inline-block;
									padding: 5px 7px;
									@include SourceCodeProWithFallback;
									word-break: break-all;
								}
							}

							p.progress-indicator, p.notification {
								@include margin-x(0);
							}
						}

						.expose-and-actions {
							@include flex-shrink(0);
							@include display-flex;
							@include justify-content(space-between);
							margin-left: auto;

							.expose-with-popover {
								@include display-flex;
								position: relative;
								width: $expose-width;

								.expose .popover {
									top: 100%;
									width: 100%;

									&:before {
										left: 8px;
									}
								}
							}

							.actions:not(.small) {
								position: relative;
								margin-left: $action_dropdown_icon-spacing;

								.dropdown-toggle {
									cursor: pointer;

									svg {
										@include size($action_dropdown_icon-width, 21px);
										fill: #999999;
									}

									&:focus svg, &:hover svg {
										fill: $def-darkgrey;
									}
								}

								.dropdown {
									@include position(absolute, 100%, 0);
									z-index: $zindex-popover;
									width: 180px;
									margin-top: 10px;
									border: 1px solid $def-lightgrey;
									@include border-radius(5px);
									@include box-shadow(0px 0px 10px 0px rgba(0, 0, 0, 0.2));
									overflow: hidden;

									.dropdown-option {
										display: block;
										padding: 15px 12px;
										font-size: 12px;
										font-weight: 500;
										color: #767676;
										background-color: white;

										&:hover {
											background-color: $def-ultralightgrey;
										}

										&:not(:last-child) {
											border-bottom: 1px solid $def-lightgrey;
										}

										&.delete {
											color: #f17420;
										}
									}

									a.dropdown-option {
										text-decoration: none;
									}

									button.dropdown-option {
										width: 100%;
										text-align: left;
									}
								}
							}
						}
					}

					.show-more-details {
						max-width: $column_left-width;
						@include margin-y(15px);
						margin-left: $details_icon-width + $details_icon_and_column-spacing;

						.show-more-info {
							margin-bottom: 10px;
							font-size: 14px;
							font-weight: 200;
						}

						p.show-more-info {
							margin-top: 0;
						}

						.show-more {
							display: block;
							border: 1px solid $def-grey;
							@include border-radius($def-radius);
							background-color: white;

							&:hover, &:focus {
								background-color: $def-ultralightgrey;
							}

							.container {
								@include display-flex;
								@include justify-content(space-between);
								@include align-items(center);
								padding: 10px 12px;
								font-size: 12px;
								font-weight: 400;

								.icon {
									margin-right: 6px;

									svg {
										@include size(9px);
									}

									@keyframes pulse {
										0% { @include transform(scale(1)); }
										50% { @include transform(scale(1.2)); }
										100% { @include transform(scale(1)); }
									}

									&.loading svg {
										@include size(6px);
										fill: $def-purple;
										animation: pulse 1s ease infinite;
									}

									&.missing svg {
										@include size(9px);
										fill: $def-danger;
									}

									&.ok svg {
										@include size(9px);
										fill: $def-green;
									}
								}

								.arrow {
									margin-left: 6px;
									@include transform(rotate(-90deg));

									svg {
										@include size(10px, 6px);
										fill: $def-verydarkgrey;
									}
								}
							}
						}
					}
				}
			}

			.file-upload {
				margin: 12px $cardo-horizontalpadding;

				.file-uploader {
					position: relative;
					border: 4px dashed $def-mediumlightgrey;
					@include border-radius($def-radius);
					padding: 18px;

					input[type="file"] {
						@include position(absolute, 0, 0);
						z-index: $zindex-file_uploader_input;
						@include size(100%);
						font-size: 0;
						opacity: 0;
						cursor: pointer;
					}

					input[type="submit"] {
						@include position(absolute, 0, 0);
						@include size(0);
						border: none;
						padding: 0;
						opacity: 0;
					}

					.content {
						text-align: center;
						font-size: 12px;
						opacity: 0.5;
						color: $def-verydarkgrey;
						@include transition(opacity, $def-transition_duration);

						strong {
							display: block;
							margin-bottom: 4px;
							font-weight: 500;
						}

						em {
							display: block;
							font-weight: 200;
						}
					}

					input[type="file"]:disabled {
						cursor: not-allowed;
					}

					input[type="file"]:not(:disabled):hover ~ .content, input[type="file"]:not(:disabled):focus ~ .content {
						opacity: 1.0;
					}
				}
			}
		}

		@include media-above($expose_header-text_change_screenwidth) {

			header .expose .short-version {
				display: none;
			}
		}

		@include media-below-inclusive($expose_header-text_change_screenwidth) {

			header .expose {
				width: $expose-width-below-inclusive;

				&:last-child {
					width: $expose-width-below-inclusive + $action_dropdown_icon-spacing + $action_dropdown_icon-width;
				}

				.long-version {
					display: none;
				}
			}

			article .uploaded-files .uploaded-file .details .expose-and-actions .expose-with-popover {
				width: $expose-width-below-inclusive;
			}
		}

		@include media-above($layout-style_change_screenwidth) {

			article .uploaded-files .details .expose-and-actions {

				.expose-with-popover .expose .on-small {
					display: none;
				}

				.actions.small {
					display: none;
				}
			}
		}

		@include media-below-inclusive($layout-style_change_screenwidth) {

			header {

				.expose {
					display: none;
				}
			}

			article .uploaded-files .uploaded-file {

				.details {
					display: block;

					.icon {
						margin-right: 0;
						margin-bottom: 15px;
					}

					.column {
						margin-right: 0;

						&.left {
							@include flex-shrink(1);
							width: auto;
						}

						.detail {
							margin-bottom: 15px;

							&.protected-badge-and-name {
								@include flex-direction(column);
								@include align-items(flex-start);

								.protected-badge {
									margin-right: 0;
									margin-bottom: 6px;
								}
							}
						}
					}

					.expose-and-actions {
						display: block;
						width: auto;
						margin-left: 0;

						.expose-with-popover {
							width: auto;

							.expose {
								@include display-flex;
								@include align-items(center);

								.checkbox {
									@include flex-shrink(0);
								}

								.on-small {
									margin-left: 10px;
									font-size: 12px;
								}
							}
						}

						.actions:not(.small) {
							display: none;
						}

						.actions.small {
							@include display-flex;
							@include flex-direction(column);
							@include margin-y(15px);

							.option {
								font-size: 12px;
								font-weight: 500;
								color: $def-green;
								margin-top: 25px;

								&:hover, &:focus {
									color: $def-green-shade;
								}

								&.delete {
									color: $def-danger;

									&:hover, &:focus {
										color: $def-danger-shade;
									}
								}
							}

							button.option {
								text-align: left;
								text-decoration: underline;
							}
						}
					}
				}

				.show-more-details {
					max-width: none;
					margin-left: 0;
				}
			}
		}
	}

	.files.provisioning-profiles {

		article .uploaded-files .details {

			.icon svg {
				fill: $def-green-neon;
			}

			.column {

				.detail.uuid {
					background-color: $def-green-verylight;
				}
			}
		}
	}

	.files.certificates {

		header {

			.label.title {
				width: $column_left-width;
				margin-right: $details_icon-width + $details_icon_and_column-spacing + $details_icon_and_column-spacing;
			}
		}

		article .uploaded-files .uploaded-file .details {

			.icon svg {
				fill: $def-purple;
			}

			.column {

				.detail.serial {
					background-color: $def-purple-light;
				}
			}

			.password {

				.password-field-wrapper {
					position: relative;
					max-width: 300px;

					$eye_checkbox-width: 22px;
					$padding: 4px;

					input.password-field {
						display: block;
						width: 100%;
						@include box-sizing(border-box);
						border: 1px solid $def-mediumlightgrey;
						@include border-radius($def-radius);
						padding: $padding;
						padding-right: $padding + $eye_checkbox-width + $padding;
						background-color: $def-verylightgrey;
						font-size: 14px;

						&.invalid {
							border-color: #F17420;
						}
					}

					.eye-checkbox {
						@include position(absolute, 50%, $padding);
						@include transform(translateY(-50%));
					}
				}

				.change-actions {
					$spacing: 10px;

					@include display-flex;
					margin-top: $spacing;

					.action:not(:last-child) {
						margin-right: $spacing;
					}
				}

				.error-notice {
					@include display-flex;
					margin-top: 10px;
					font-size: 12px;
					color: #F17420;

					.icon {
						margin-right: 10px;

						svg {
							@include size(16px, 15px);
							fill: #F17420;
						}
					}
				}
			}
		}

		@include media-above($layout-style_change_screenwidth) {

			article .uploaded-files .uploaded-file .details .password .label.on-small {
				display: none;
			}
		}

		@include media-below-inclusive($layout-style_change_screenwidth) {

			header {

				.label.title {
					width: 100%;
					margin-right: 0;
				}

				.label.password {
					display: none;
				}
			}

			article .uploaded-files .uploaded-file .details .password {
				margin-bottom: 15px;

				.label.on-small {
					margin-bottom: 10px;
					font-size: 14px;
					font-weight: 500;
				}
			}
		}
	}

	.files.android-keystore, .files.generic-files {

		article {

			.file-upload, .keystore-metadata {

				p {
					margin-top: 0;
					margin-bottom: 10px;
					font-size: 14px;
					font-weight: 200;
				}

				input.env-var {
					display: block;
					@include box-sizing(border-box);
					width: 100%;
					margin-bottom: 10px;
					border: 1px solid $def-mediumlightgrey;
					@include border-radius($def-radius);
					padding: 10px 18px;
					font-size: 14px;
					font-weight: 200;
				}

				p.progress-indicator, p.notification {
					@include margin-x(0);
					margin-bottom: 10px;
				}
			}
		}
	}

	.files.android-keystore {

		article {

			.uploaded-files .uploaded-file .details {

				.icon svg {
					fill: $def-green-verylight;
				}

				.column {

					.detail.env-var-key {
						background-color: $def-green-verylight;
					}
				}
			}

			form.keystore-metadata {
				padding: 12px $cardo-horizontalpadding;

				section {
					margin-bottom: 25px;

					code.env-var {
						@include border-radius($def-radius);
						padding: 3px;
						font-weight: 200;
						color: $def-purple;
						background-color: $def-verylightgrey;
					}

					.show-password {
						@include display-flex;
						@include align-items(center);

						label {
							margin-left: 8px;
							font-size: 12px;
						}
					}
				}

				.save, .reset {
					display: block;
					width: 500px;
					max-width: 100%;

					&:not(:last-child) {
						margin-bottom: 10px;
					}
				}
			}
		}
	}

	.files.generic-files {

		article {

			.uploaded-files .uploaded-file .details {

				.icon svg {
					fill: $def-green-neon;
				}

				.column {

					.detail.env-var-key {
						background-color: $def-green-verylight;
					}
				}
			}

			.file-upload {

				code.env-var {
					display: block;
					line-height: 180%;
					margin-bottom: 10px;
					border: 1px solid $def-mediumlightgrey;
					@include border-radius($def-radius);
					padding: 10px 18px;
					font-size: 14px;
					font-weight: 200;
					color: $def-purple;
					background-color: $def-verylightgrey;
				}
			}
		}
	}
}

.popup-body#prov-profile-details-popup-body.vertical-scroll {
	width: 920px;
	min-height: 90%;

	header.closeable.left-aligned {
		@include flex-shrink(0);
		@include ellipsis-oneliner;
		border-bottom: 1px solid $def-mediumlightgrey;

		.popup-title {
			@include ellipsis-oneliner;
			font-size: 12px;
			font-weight: bold;
			color: black;
		}

		.popup-close {
			vertical-align: middle;

			svg {
				@include size(10px, 16px);
				fill: $def-darkgrey;
			}
		}
	}

	article {
		@include display-flex;
		padding: 0;

		.sidebar {
			@include flex-shrink(0);
			width: 215px;
			border-right: 1px solid $def-mediumlightgrey;

			.menu {

				.menu-option {
					@include display-flex;
					@include align-items(center);
					@include justify-content(space-between);
					padding: 22px 20px;
					border-bottom: 1px solid $def-mediumlightgrey;
					font-size: 12px;
					font-weight: 500;

					&:hover, &:focus {
						background-color: $def-verylightgrey;
					}

					&.selected {
						color: white;
						background-color: $def-verydarkgrey;

						.arrow svg {
							fill: white;
						}
					}

					&.matching-certificates .arrow {
						display: none;
					}

					&.capabilities .status, &.devices .status {
						display: none;
					}

					.title {
						font-size: 12px;
						font-weight: 500;
					}

					.status, .arrow {
						display: block;
					}

					.status {
						@keyframes pulse {
							0% { @include transform(scale(1)); }
							50% { @include transform(scale(1.2)); }
							100% { @include transform(scale(1)); }
						}

						&.loading svg {
							@include size(6px);
							fill: $def-purple;
							animation: pulse 1s ease infinite;
						}

						&.expired svg {
							@include size(6px);
							fill: $def-grey;
						}

						&.missing svg {
							@include size(10px);
							fill: #F1741E;
						}

						&.ok svg {
							@include size(10px);
							fill: #38C3A2;
						}
					}

					.arrow {
						margin-left: 6px;
						vertical-align: middle;
						@include transform(rotate(-90deg));

						svg {
							@include size(10px, 16px);
							fill: $def-verydarkgrey;
						}
					}
				}

				button.menu-option {
					width: 100%;
					text-align: left;
				}
			}
		}

		.content {
			@include flex-grow(1);

			.error-notice {
				@include display_flex;
				@include flex-direction(column);
				@include border-radius($def-radius);
				padding: 6px 12px;
				margin: 16px 22px;
				font-size: 13px;
				line-height: 18px;
				color: $def-danger;
				background-color: $def-danger-light;
			}

			.matching-certificates, .devices, .capabilities {
				list-style: none;
				padding-left: 0;
				margin-top: 0;

				li {
					@include display-flex;
					border-bottom: 1px solid $def-mediumlightgrey;
					padding: 16px 22px;

					.status {
						@include display-flex;
						@include align-items(center);
						@include flex-shrink(0);
						@include size(18px);

						@keyframes pulse {
							0% { @include transform(scale(1)); }
							50% { @include transform(scale(1.3)); }
							100% { @include transform(scale(1)); }
						}

						&.loading .icon-wrapper:not(.loading-icon-wrapper) {
							display: none;
						}

						&.expired .icon-wrapper:not(.expired-icon-wrapper) {
							display: none;
						}

						&.missing .icon-wrapper:not(.missing-icon-wrapper) {
							display: none;
						}

						&.ok .icon-wrapper:not(.ok-icon-wrapper) {
							display: none;
						}

						&.loading, &.expired, &.missing, &.ok {
							display: block;
							margin-right: 22px;

							.loading-icon-wrapper svg {
								@include size(12px);
								fill: $def-purple;
								animation: pulse 1s ease infinite;
							}

							.missing-icon-wrapper svg {
								@include size(18px);
								fill: $def-grey;
							}

							.expired-icon-wrapper svg {
								@include size(18px);
								fill: $def-danger;
							}

							.ok-icon-wrapper svg {
								@include size(18px);
								fill: #3ac3a2;
							}
						}
					}
				}

				.identity {
					@include align-items(center);

					&.missing {
						opacity: 0.5;

						.details .column {

							.common-name, .missing {
								color: $def-verydarkgrey;
							}
						}
					}

					.details {
						@include display-flex;
						@include align-items(center);
						@include justify-content(space-between);
						@include flex-grow(1);

						.column {

							.common-name {
								font-size: 12px;
								font-weight: 500;
							}

							.serial {
								display: inline-block;
								margin-top: 4px;
								padding: 5px 7px;
								@include SourceCodeProWithFallback;
								font-size: 12px;
								font-weight: 500;
								background-color: #f6eaff;
							}

							.expired, .missing, .uploaded {
								display: inline-block;
								font-size: 11px;
								font-weight: 500;
								text-transform: uppercase;
								color: $def-danger;
							}

							.uploaded {
								color: #3ac3a2;
							}
						}
					}

				}

				.device {
					@include align-items(center);

					.udid-info {
						font-size: 14px;
						font-weight: 300;
						@include SourceCodeProWithFallback;

						.udid {
							word-break: break-all;
							word-wrap: break-word;
						}
					}

					.details {
						@include display-flex;
						@include justify-content(space-between);
						@include align-items(center);
						@include flex-grow(1);

						.registration-info {
							@include flex-shrink(0);
							width: 160px;
							margin-left: 10px;
							text-align: left;
							font-size: 10px;

							.not-registered .label, .registered .label {
								text-transform: uppercase;
							}

							.not-registered .label {
								color: $def-danger;
							}

							.registered {

								.label {
									color: $def-mediumdarkgrey;
								}

								.username {
									color: $def-green;
									font-weight: 500;
								}
							}
						}
					}
				}

				.capability {
					font-size: 12px;
					font-weight: 500;

					&:nth-child(even) {
						background-color: $def-verylightgrey;
					}
				}
			}
		}

		@include media-below-mid {
			display: block;

			.sidebar {
				width: auto;
				border-right: none;
				border-bottom: 1px solid $def-mediumlightgrey;

				.menu {
					@include display-flex;

					.menu-option {
						@include flex-grow(1);
						border-bottom: none;

						&:not(:first-child) {
							border-left: 1px solid $def-mediumlightgrey;
						}

						&.devices .arrow, &.capabilities .arrow {
							@include transform(none);
						}
					}

					button.menu-option {
						text-align: center;
					}
				}
			}

			.content {

				.matching-certificates, .devices, .capabilities {

					li {
						display: block;

						.status {
							margin-right: 0;
							margin-bottom: 10px;
						}
					}
				}

				.matching-certificates {

					.identity {

						.details {
							@include flex-direction(column);
							@include align-items(flex-start);

							.column {

								.expired, .missing, .uploaded {
									@include padding-x(0);
								}
							}
						}
					}
				}

				.devices {

					.device {

						.details {
							display: block;

							.registration-info {
								margin-left: 0;
								margin-top: 10px;
							}
						}
					}
				}

			}
		}

		$dropdown_menu-screenwidth: 420px;

		@include media-above($dropdown_menu-screenwidth) {

			.sidebar .menu.small {
				display: none;
			}
		}

		@include media-below-inclusive($dropdown_menu-screenwidth) {

			.sidebar {

				.menu:not(.small) {
					display: none;
				}

				.menu.small {

					.menu-selector {
						width: 100%;
						margin: 10px 14px;
						border-color: $def-mediumlightgrey;
						@include padding-y(16px);
						font-size: 12px;
						font-weight: 500;

						$svg_content_with_attributes: svg_content_with_attributes('<%= svg("arrow_slim-down") %>', (
							fill: rgba($def-verydarkgrey, 0.99)
						));

						background-image: url('data:image/svg+xml;utf8, #{ $svg_content_with_attributes }');
						background-size: 14px auto;
					}
				}
			}
		}
	}
}

