@import "default";
@import "constants";

header.sticky {
	z-index: $zindex-sticky_header;

	@include position(fixed, 0, 0);
	width: 100%;

	&:not(:empty) {
		@include box-shadow(0px 3px 20px 0px rgba(0, 0, 0, 0.2));
	}
}

$menubutton_verticalpadding: 12px;

header.menu {
	@include display-flex;
	@include flex-direction(column);
	@include flex-shrink(0);
	@include padding-x($main-horizontalpadding);
	padding-top: 20px;

	.app-topbar {
		@include display-flex;
		@include align-items(center);
		@include flex-wrap(wrap);
		$spacing: 14px;

		.app-icon {
			@include flex-shrink(0);
			@include size(24px);
			@include margin-y(8px);
			margin-right: $spacing;
			font-size: 14px;
			text-align: center;
			line-height: 26px;
			overflow: hidden;
			text-transform: uppercase;
			color: white;
			border-radius: 3px;
			background-color: $def-purple;
			background-size: cover;
		}

		.project-type-icon {
			@include flex-shrink(0);
			@include margin-y(8px);
			margin-right: $spacing;

			span.platform-icon {
				@include size(24px);
				display: none;
			}

			&:before {
				content: "?";
			}

			svg {
				@include size(24px);
				fill: $def-grey;
			}

			@mixin icon_styling($icon_class) {
				&:before {
					content: none;
				}

				span.platform-icon.#{$icon_class} {
					display: flex;
				}
			}

			&.ios {
				@include icon_styling("apple");
			}
			&.osx,
			&.macos {
				@include icon_styling("macos");
			}
			&.android {
				@include icon_styling("android");
			}
			&.xamarin {
				@include icon_styling("xamarin");
			}
			&.cordova {
				@include icon_styling("cordova");
			}
			&.ionic {
				@include icon_styling("ionic");
			}
			&.flutter {
				@include icon_styling("flutter");
			}
			&.react-native {
				@include icon_styling("react-native");
			}
			&.flutter {
				@include icon_styling("flutter");
			}
			&.other {
				@include icon_styling("other");
			}
		}

		ol.breadcrumbs {
			@include display-flex;
			@include align_items(baseline);
			@include flex_wrap(wrap);
			@include flex-shrink(0);
			@include margin-y(8px);
			margin-right: $spacing;
			padding-left: 0;
			list-style: none;
			max-width: 100%;
			font-size: 18px;
			font-weight: 300;
			color: $def-grape;

			.level {
				@include flex-shrink(0);
				max-width: 100%;
				word-break: break-all;

				&:not(.shrinkable) {
					@include flex-shrink(0);
				}

				&.current {
					font-weight: 500;
				}

				a {
					text-decoration: none;
					color: inherit;

					&:hover,
					&:focus {
						text-decoration: underline;
					}
				}

				&:not(:last-child):after {
					content: "/";
					@include margin-x(6px);
				}
			}
		}

		.privacy-settings-icon {
			@include display-flex;
			@include flex-shrink(0);
			@include size(24px);
			@include margin-y(8px);
			margin-right: $spacing;

			.public,
			.private {
				display: none;
			}

			&.private .private {
				@include display-flex;

				svg {
					@include size(18px, 22px);
					fill: $def-grey;
				}
			}

			&.public .public {
				@include display-flex;

				svg {
					@include size(18px, 21px);
					fill: $def-grey;
				}
			}
		}
	}

	.workflow-editor-menubar {
		@include display-flex;
		@include flex-direction(row);
		@include flex-shrink(0);
		padding-top: 20px;

		nav {
			@include display-flex;
			margin-right: auto;

			button.tab {
				&:before {
					$border_width: 4px;

					content: "";
					@include position(absolute, 100%, 0);
					@include size(100%);
					border-top: $border_width solid $def-violet_blue;
					@include border-top-radius($border_width);
					background-color: white;
				}

				position: relative;
				@include display-flex;
				@include justify-content(center);
				@include align-items(center);
				padding: $menubutton_verticalpadding 26px;
				text-align: center;
				font-size: 16px;
				font-weight: 400;
				color: $def-mediumdarkgrey;
				text-decoration: none;
				overflow: hidden;

				span.icon {
					@include flex-shrink(0);
					@include display-flex;
					@include align-items(center);
					@include justify-content(center);
					margin-right: 8px;

					svg {
						position: relative;
						fill: $def-mediumdarkgrey;
					}
				}

				r-icon {
					position: relative;
					margin-left: 8px;
				}

				span.title {
					position: relative;
				}
			}

			button.tab:hover:not(.current),
			button.tab:focus:not(.current) {
				$color: $def-violet_blue;

				color: $color;

				span.icon svg {
					fill: $color;
				}
			}

			button.tab:not(.current) {
				$transition_duration: $def-transition_duration;

				@include transition(color $transition_duration);

				span.icon svg {
					@include transition(fill $transition_duration);
				}
			}

			button.tab.current {
				$color: $def-violet_blue;

				color: $color;

				&:before {
					top: 0;
				}

				span.icon svg {
					fill: $color;
				}
			}

			button.tab.hidden {
				display: none;
			}

			button.tab.workflows span.icon svg {
				top: -1px;
				@include size(18px, 12px);
			}

			button.tab.code-signing span.icon svg {
				top: 0px;
				@include size(17px, 15px);
			}

			button.tab.secrets span.icon svg {
				top: -1px;
				@include size(11px, 13px);
			}

			button.tab.env-vars span.icon svg {
				top: -1px;
				@include size(9px, 16px);
			}

			button.tab.triggers span.icon svg {
				top: -1px;
				@include size(9px, 17px);
			}

			button.tab.stack span.icon svg {
				@include size(17px, 14px);
			}

			button.tab.licenses span.icon svg {
				@include size(18px, 18px);
			}

			button.tab.yml span.icon svg {
				top: 0px;
				@include size(15px, 9px);
			}
		}

		aside.discard-save {
			@include align-self(flex-end);
			@include display-flex;
			margin-left: 10px;
			padding-bottom: $menubutton_verticalpadding;

			&.not-available {
				visibility: hidden;
			}

			button {
				@include border-radius($def-button-border_radius);
				@include padding-y(8px);
				@include transition-duration($def-transition_duration);
			}

			button:not(:last-child) {
				margin-right: 10px;
			}

			button.save {
				@include padding-x(25px);
				font-size: 15px;

				span.save,
				span.saved,
				span.in-progress {
					display: inline-block;
					width: 75px;
				}

				span.save {
					&.windows:before {
						content: "Ctrl + S";
					}

					&.osx:before {
						content: "âŒ˜ + S";
					}

					&.other:before {
						content: "<%= data[:strings][:main][:save] %>";
					}
				}

				span.saved {
					display: flex;
					&:after {
						content: "<%= data[:strings][:main][:saved] %>";
						margin-left: 6px;
					}

					svg {
						@include size(24px);
					}
				}

				span.in-progress svg {
					@include position(relative, 2px);
					@include size(20px, 13px);

					@include keyframes(rotate) {
						from {
							@include transform(rotate(0deg));
						}
						to {
							@include transform(rotate(360deg));
						}
					}

					@include animation(rotate 1s linear infinite);
				}
			}
		}
	}

	@include media-below(1180px) {
		@include flex-direction(column);

		.workflow-editor-menubar {
			@include flex-direction(column);

			nav {
				@include order(2);
				margin-right: 0;

				button.tab {
					@include flex-grow(1);
				}
			}

			aside.discard-save {
				@include order(1);
				margin-left: 0;
			}
		}
	}

	@include media-below-mid {
		@include padding-x($main-horizontalpadding_small);
		padding-top: 10px;

		.app-topbar {
			.app-icon,
			.project-type-icon,
			.privacy-settings-icon {
				display: none;
			}

			ol.breadcrumbs {
				font-size: 14px;
			}
		}

		.workflow-editor-menubar {
			padding-top: 5px;

			nav {
				button.tab {
					@include flex-direction(column);
					@include justify-content(flex-start);
					@include padding-x(15px);

					span.icon {
						height: 16px;
						margin-right: 0;
						margin-bottom: 5px;
					}

					span.title {
						font-size: 13px;
					}
				}
			}
		}
	}

	@include media-below(520px) {
		.workflow-editor-menubar {
			nav {
				button.tab {
					@include justify-content(center);
					@include flex-direction(row);

					span.icon {
						margin-bottom: 0;
					}

					span.title {
						display: none;
					}
				}
			}

			aside.discard-save {
				@include align-self(stretch);

				button.discard {
					@include flex-grow(1);
				}

				button.save {
					@include flex-grow(2);
				}
			}
		}
	}
}

header.sticky header.menu {
	padding-top: 10px;
	background-color: $def-ultralightgrey;
}

.main-content {
	@include flex-grow(1);
	@include display-flex;
	@include flex-direction(column);
	background-color: $def-ultralightgrey;

	article.menu-content {
		@include flex-grow(1);
		@include flex-shrink(0);
		@include display-flex;
		@include flex-direction(column);
		background-color: white;

		&:not(.ninja) > p.progress-indicator,
		.tab-content > p.progress-indicator {
			margin: $main-verticalpadding $main-horizontalpadding;

			@include media-below-mid {
				@include margin-x($main-horizontalpadding_small);
			}
		}

		.tab-content {
			@include flex-grow(1);
			@include flex-shrink(0);
			@include display-flex;
			@include flex-direction(column);

			.menu-content-padding {
				padding: $main-verticalpadding $main-horizontalpadding;

				@include media-below-mid {
					@include padding-x($main-horizontalpadding_small);
				}
			}
		}
	}

	footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		@include flex-shrink(0);
		padding: 10px $main-horizontalpadding;
		font-size: 13px;
		font-weight: 400;
		color: $def-darkgrey;
		background-color: $def-verylightgrey;

		svg {
			@include size(13px, 12px);
			@include margin-x(12px);
			fill: $def-green;
		}

		.content {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.placeholder {
			width: 40px;
		}

		@include media-below-mid {
			flex-direction: column-reverse;

			.placeholder {
				display: none;
			}

			.content {
				flex-direction: column;
			}

			svg {
				@include margin-x(0);
				@include margin-y(12px);
			}

			.version {
				margin-top: 6px;
			}
		}
	}
}

.new-layout {
	width: 100vw;
	height: 100vh;
	display: grid;
	overflow: hidden;
	grid-template-columns: max-content 1fr;
	grid-template-rows: max-content auto max-content;
	grid-template-areas:
		'header header'
		'sidebar content'
		'footer footer'
	;

	.header {
		grid-area: header;
	}

	.navigation {
		grid-area: sidebar;
		overflow-y: auto;
	}

	> .main {
		grid-area: content;

		padding: 32px;
		overflow-y: auto;
		overflow-x: hidden;

		&:has(.workflows-page) {
			padding: 0;

			.tab-content,
			.tab-content > .workflows-page {
				height: 100%;
			}
		}

		&:has(.tab-workflows) {
			padding: 0;

			.tab-content,
			.tab-content > .tab-workflows,
			.tab-content > .tab-workflows > .content {
				height: 100%;
			}

			.tab-content > .tab-workflows > .content > .workflows > .workflows-container {
				flex: none;
			}
		}

		&:has(.tab-pipelines) {
			padding: 0;

			.tab-content,
			.tab-content > .tab-pipelines {
				height: 100%;
			}
		}

		&:has(.tab-code-signing) {
			padding: 20px 0;
		}

		&:has(.tab-yml) {
			.tab-content,
			.tab-content > .tab-yml {
				height: 100%;
			}
		}

		> :not(:first-child) {
			margin-top: 20px;
		}
	}

	.footer {
		grid-area: footer;
	}
}
